#include <iostream>

int Temperatures(double F, double C, double K)
{
    const double fahr = 5.0 / 9.0, fahr1 = 32, Cels = 273.16;
    
    C = fahr * (F - fahr1);
    K = C - Cels;

    printf("%.2le is %.2le is %.2le", F, C, K);
    return 0;
}


int main()
{
    int x = scanf();
    double F, C, K;


    if (x == 1) {
        printf("Enter temperature in F: ");
        scanf_s("%le", &F);

        Temperatures(F, C, K);
        printf("Temperatures");

    }


}
